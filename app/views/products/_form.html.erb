<div class="row">
  <%= simple_form_for @product do |f| %>
    <p><%= f.association :category, collection: Category.all, prompt: "Choose a category" %></p>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :features %>     
    <%= f.button :submit, "Save" %>
  <% end %>    
</div>