<% provide :title, "All articles" %>

<section id="index-articles">

  <h3><%= I18n.t(:our_news) %></h3>

  <section id="index-articles-inner">
    <% @articles.each do |article| %>
      <section class="index-article-item">
        <% article.photos.each do |photo| %>
          <div class="index-article-photo"><%= image_tag photo.image_url(:thumb).to_s %></div>
        <% end %>
        <div class="index-article-description">
          <div class="index-article-date"><%= article.created_at.strftime("%d.%m.%y") %></div>
          <div class="index-article-title"><%= link_to article.title, article_path(article) %></div>
          <div class="index-article-content"><%= article.annotation %></div>
        </div>
        <div id="cleaner">
      </section>
      <hr />
    <% end %>
    <section id="index-articles-paginator">
      <%= paginate @articles %>
    </section> 
  </section>
</section>